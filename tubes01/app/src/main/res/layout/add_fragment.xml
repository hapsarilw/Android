<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operator :"
        android:id="@+id/tvOperator"
        />
    <Spinner
        android:padding="20dp"
        android:id="@+id/spinner"
        android:layout_toRightOf="@id/tvOperator"
        android:entries="@array/listOperator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:padding="20dp"
        android:id="@+id/tvOperand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operand :"
        android:layout_below="@+id/tvOperator"
        />
    <EditText
        android:padding="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Hi"
        android:layout_toRightOf="@id/tvOperand"
        android:layout_below="@id/tvOperator"
        />

    <Button
        android:id="@+id/bt_check"
        android:text="Submit"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvOperand"
        android:layout_centerInParent="true"
        />



</RelativeLayout>